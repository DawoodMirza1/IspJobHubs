<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/lightgray"
        tools:context=".activities.MainActivity">

    <androidx.cardview.widget.CardView
            android:elevation="8dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Categories"
                android:textSize="32sp"
                android:layout_margin="16dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/total_purchase2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Category One"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/redPrimaryDark"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/total_purchase3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Category Two"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/bluePrimaryDark"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/total_purchase4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Category Three"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>